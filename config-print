#! perl

use v5.20;
use common::sense;

our @resources = qw(
    background foreground cursor
    mouse_background mouse_foreground
    highlight borderColor
    font geometry
    ),
    map { "color$_" } 0..15;

sub on_start {
    for (@resources) {
        say "$_: " . $TERM->x_resource($_);
    }
    exit;
}
